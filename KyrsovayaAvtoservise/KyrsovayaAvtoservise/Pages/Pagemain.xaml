<Page x:Class="KyrsovayaAvtoservise.Pages.Pagemain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KyrsovayaAvtoservise.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Pagemain">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Button Content="Услуги" Name="btnService" Style="{StaticResource mainBtn}"/>
                <Button Content="Товары" Click="btnProductPage" Name="btnProduct" Style="{StaticResource mainBtn}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button Content="Производители" Name="btnManufacture" Style="{StaticResource mainBtn}"/>
                <Button Content="Продажи" Name="btnSales" Style="{StaticResource mainBtn}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
